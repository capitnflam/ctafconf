#recursive grep with filename and line number
#exclude svn
grepr ()
{
  arg=$@
  grep --color=always -r -n -H $arg . | grep -v "/.svn/" | grep -v ".svn-base:" | grep -v "^grep:" | ~/.config/ctafconf/bin/colorgrepr.pl 2>/dev/null
}

grepr $@
