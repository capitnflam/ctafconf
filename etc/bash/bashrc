#!/bin/sh

## Warning ##
#never edit this file
#please edit ~/.config/ctafconf/perso/bashrc.mine


if [[ $- != *i* ]] || [ a$HOST = agate-ssh ]; then
	# Shell is non-interactive.  Be done now
	return
fi
cat ~/.config/ctafconf/VERSION
echo -n "shell: bash, "
cat ~/.config/ctafconf/etc/shell/motd

# Bash won't get SIGWINCH if another process is in the foreground.
# Enable checkwinsize so that bash will check the terminal size when
# it regains control.  #65623
# http://cnswww.cns.cwru.edu/~chet/bash/FAQ (E11)
shopt -s checkwinsize

#no bell
set bell-style none

[ -f ~/.config/ctafconf/etc/shell/env ] && . ~/.config/ctafconf/etc/shell/env sh

ls ~/.config/ctafconf/perso/env | null_cmd grep '.env$' && source ~/.config/ctafconf/perso/env/*.env

ls ~/.config/ctafconf/perso/fun | null_cmd grep '.fun$' && source ~/.config/ctafconf/perso/fun/*.fun

[ -f ~/.config/ctafconf/etc/shell/alias ] && . ~/.config/ctafconf/etc/shell/alias sh

[ -f ~/.config/ctafconf/etc/bash/bashprompt ] && . ~/.config/ctafconf/etc/bash/bashprompt

[ -f ~/.config/ctafconf/perso/bashrc.mine ] && ~/.config/ctafconf/perso/bashrc.mine

